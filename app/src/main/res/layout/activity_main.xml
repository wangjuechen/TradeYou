<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jc.android.tradeyou.MainActivity">

    <ImageView
        android:id="@+id/banner_main_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="7:4"
        android:scaleType="fitXY"
        android:src="@drawable/banner_pic"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_main_page">

        <TextView
            android:id="@+id/tv_marketPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="@dimen/activity_vertical_margin"
            android:drawableTop="@drawable/ic_local_grocery_store_black_24dp"
            android:focusable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="@dimen/touchable_padding"
            android:text="@string/marketPlace_home"
            android:textSize="@dimen/home_subtitle_font_size"
            app:layout_constraintBottom_toBottomOf="@id/horizon_guideline_first"
            app:layout_constraintTop_toTopOf="@+id/horizon_guideline_first"
            app:layout_constraintLeft_toLeftOf="@id/vertical_guideline_first"
            app:layout_constraintRight_toRightOf="@id/vertical_guideline_first"/>


        <TextView
            android:id="@+id/tv_jobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="@dimen/activity_vertical_margin"
            android:drawableTop="@drawable/ic_assignment_ind_black_24dp"
            android:focusable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="@dimen/touchable_padding"
            android:text="@string/jobs_home"
            android:textSize="@dimen/home_subtitle_font_size"
            app:layout_constraintLeft_toLeftOf="@id/vertical_guideline_second"
            app:layout_constraintRight_toRightOf="@id/vertical_guideline_second"
            app:layout_constraintTop_toTopOf="@id/horizon_guideline_first"
            app:layout_constraintBottom_toBottomOf="@id/horizon_guideline_first"/>

        <TextView
            android:id="@+id/tv_motors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="@dimen/activity_vertical_margin"
            android:drawableTop="@drawable/ic_directions_car_black_24dp"
            android:focusable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="@dimen/touchable_padding"
            android:text="@string/motors_home"
            android:textSize="@dimen/home_subtitle_font_size"
            app:layout_constraintLeft_toLeftOf="@id/vertical_guideline_first"
            app:layout_constraintRight_toRightOf="@id/vertical_guideline_first"
            app:layout_constraintTop_toTopOf="@id/horizon_guideline_second"
            app:layout_constraintBottom_toBottomOf="@id/horizon_guideline_second"/>

        <TextView
            android:id="@+id/tv_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="@dimen/activity_vertical_margin"
            android:drawableTop="@drawable/ic_home_black_24dp"
            android:focusable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="@dimen/touchable_padding"
            android:text="@string/property_home"
            android:textSize="@dimen/home_subtitle_font_size"
            app:layout_constraintLeft_toLeftOf="@id/vertical_guideline_second"
            app:layout_constraintRight_toRightOf="@id/vertical_guideline_second"
            app:layout_constraintTop_toTopOf="@id/horizon_guideline_second"
            app:layout_constraintBottom_toBottomOf="@id/horizon_guideline_second" />

        <android.support.constraint.Guideline
            android:id="@+id/vertical_guideline_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33" />

        <android.support.constraint.Guideline
            android:id="@+id/vertical_guideline_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.66" />

        <android.support.constraint.Guideline
            android:id="@+id/horizon_guideline_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.33" />

        <android.support.constraint.Guideline
            android:id="@+id/horizon_guideline_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.66" />


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
