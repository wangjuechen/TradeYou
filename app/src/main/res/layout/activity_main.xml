<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jc.android.tradeyou.MainActivity">

    <ImageView
        android:id="@+id/banner_main_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="7:4"
        android:scaleType="fitXY"
        android:src="@drawable/banner_pic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/banner_main_page" >

        <TextView
            android:id="@+id/tv_marketPlace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/activity_vertical_margin"
            android:drawableTop="@drawable/ic_local_grocery_store_black_24dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/touchable_padding"
            android:onClick="onClick"
            android:text="@string/marketPlace_home"
            android:textSize="@dimen/home_subtitle_font_size" />


        <TextView
            android:id="@+id/tv_jobs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/activity_vertical_margin"
            android:drawableTop="@drawable/ic_assignment_ind_black_24dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/touchable_padding"
            android:onClick="onClick"
            android:text="@string/jobs_home"
            android:textSize="@dimen/home_subtitle_font_size" />

        <TextView
            android:id="@+id/tv_motors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/activity_vertical_margin"
            android:drawableTop="@drawable/ic_directions_car_black_24dp"
            android:gravity="center"
            android:padding="@dimen/touchable_padding"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:onClick="onClick"
            android:text="@string/motors_home"
            android:textSize="@dimen/home_subtitle_font_size" />

        <TextView
            android:id="@+id/tv_property"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/activity_vertical_margin"
            android:drawableTop="@drawable/ic_home_black_24dp"
            android:gravity="center"
            android:padding="@dimen/touchable_padding"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:onClick="onClick"
            android:text="@string/property_home"
            android:textSize="@dimen/home_subtitle_font_size" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
