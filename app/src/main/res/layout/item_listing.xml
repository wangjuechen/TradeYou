<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="@dimen/row_padding"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_item_listingPhoto"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/contentDescription_item_listing_image"/>

    <TextView
        android:id="@+id/tv_item_listingTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_item_listingPhoto"
        app:layout_constraintLeft_toRightOf="@+id/iv_item_listingPhoto"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/row_padding"
        android:layout_marginRight="@dimen/row_padding"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/row_padding" />

</android.support.constraint.ConstraintLayout>