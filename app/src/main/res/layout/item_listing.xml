<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:paddingTop="@dimen/row_padding"
    android:paddingBottom="@dimen/row_padding"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_item_listingPhoto"
        android:layout_width="120dp"
        android:layout_height="108dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/contentDescription_item_listing_image"/>

    <TextView
        android:id="@+id/tv_item_listingTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_item_listingPhoto"
        app:layout_constraintLeft_toRightOf="@+id/iv_item_listingPhoto"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/activity_horizontal_margin" />

</android.support.constraint.ConstraintLayout>