<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:paddingTop="@dimen/spacing_small"
    android:paddingBottom="@dimen/spacing_small"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
   >

    <ImageView
        android:id="@+id/image_item_listingPhoto"
        android:layout_width="120dp"
        android:layout_height="108dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/content_description_item_listing_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/text_item_listingTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toTopOf="@id/image_item_listingPhoto"
        app:layout_constraintLeft_toRightOf="@+id/image_item_listingPhoto"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>